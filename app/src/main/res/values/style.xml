<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Normal Text -->
    <style name="TextNormalPoppins">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="TextNormalPoppinsLightGray">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- Bold Text -->
    <style name="TextBoldPoppins">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSemiBoldPoppins">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextMediumPoppins">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Heading Text -->
    <style name="TextHeadingPoppins">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>
    <style name="EditTextPoppins" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="hintTextColor">@color/dark_gray</item>


    </style>
    <!-- Primary Button -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/color_secondary</item>
    </style>

    <!-- Secondary Button -->
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
    </style>



</resources>