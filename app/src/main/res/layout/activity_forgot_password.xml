<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ForgotPasswordActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back"
        app:tint="@color/dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"/>

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvResetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                android:textStyle="bold"
                style="@style/TextHeadingPoppins"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvResetSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/please_create_a_strong_password_and_confirm_it_below"
                style="@style/TextNormalPoppins"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvResetTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="10dp" />

            <!-- Email Label -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                style="@style/TextSemiBoldPoppins"
                app:layout_constraintTop_toBottomOf="@id/tvResetSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp" />

            <!-- Email Input -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_email"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    android:background="@null"
                    style="@style/EditTextPoppins"
                    android:text="test@gmail.com"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- New Password Label -->
            <TextView
                android:id="@+id/tvNewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                style="@style/TextSemiBoldPoppins"
                app:layout_constraintTop_toBottomOf="@id/layoutEmail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp" />

            <!-- New Password -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvNewPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_new_password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:text="Test@123"
                    style="@style/EditTextPoppins"
                    android:background="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivToggleNewPass"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/ivToggleNewPass"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_eye"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="6dp"
                    app:tint="@color/dark_gray" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Confirm Password Label -->
            <TextView
                android:id="@+id/tvConfirmPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                style="@style/TextSemiBoldPoppins"
                app:layout_constraintTop_toBottomOf="@id/layoutNewPassword"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp" />

            <!-- Confirm Password -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/re_enter_password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    style="@style/EditTextPoppins"
                    android:text="Test@123"
                    android:background="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivToggleConfirmPass"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/ivToggleConfirmPass"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_eye"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="6dp"
                    app:tint="@color/dark_gray" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Reset Button -->
            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                style="@style/ButtonPrimary"
                app:layout_constraintTop_toBottomOf="@id/layoutConfirmPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="40dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
