<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
   >



    <!-- Table Number Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTableNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddMenu"
        style="@style/EditTextPoppins"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/color_primary"
        app:hintTextColor="@color/color_primary"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTableNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Table Number"
            android:inputType="number"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Add Menu Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Menu"
        android:gravity="center"
        style="@style/ButtonSecondary"
        app:layout_constraintTop_toTopOf="@id/tilTableNo"
        app:layout_constraintBottom_toBottomOf="@id/tilTableNo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"/>

    <!-- Empty message -->
    <TextView
        android:id="@+id/tvEmptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No menu items added yet"
        style="@style/TextSemiBoldPoppins"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tilTableNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Product list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelectedMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmptyMessage"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 items | â‚¹0.00"
                style="@style/TextSemiBoldPoppins"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Order"
                style="@style/ButtonPrimary"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
