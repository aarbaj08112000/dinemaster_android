<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeaderNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"

        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/header_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_rounded"
            android:padding="14dp">

            <!-- Back Text -->
            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                style="@style/TextSemiBoldPoppins"
                android:textColor="@color/color_primary"
                android:paddingStart="4dp"
                android:paddingEnd="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16sp"
                style="@style/TextBoldPoppins"
                android:textColor="@color/color_primary"
                android:layout_centerInParent="true" />

            <!-- Cart -->
            <TextView
                android:id="@+id/tvCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:visibility="gone"
                android:textSize="12sp"
                style="@style/TextBoldPoppins"
                android:textColor="@color/color_primary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@id/cardHeaderNav"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Custom Bottom Navigation -->
    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Background with curve for FAB -->
        <View
            android:id="@+id/bgCurve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_nav_bg" />

        <!-- Tab Items -->
        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            android:padding="8dp">

            <!-- Home -->
            <TextView
                android:id="@+id/tabHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/home"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:background="@drawable/bottom_nav_item_bg"
                android:textColor="@color/color_primary"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true"
                app:drawableTopCompat="@drawable/ic_home_menu"
                app:drawableTint="@color/color_primary" />

            <!-- Menu -->
            <TextView
                android:id="@+id/tabMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/menu"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/white"
                android:drawablePadding="4dp"
                app:drawableTopCompat="@drawable/ic_menu_menu" />

            <!-- Spacer for FAB -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Order List -->
            <TextView
                android:id="@+id/tabOrderList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/order"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="4dp"
                app:drawableTopCompat="@drawable/ic_orders_menu" />

            <!-- Profile -->
            <TextView
                android:id="@+id/tabProfile"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/profile"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/white"
                android:drawablePadding="4dp"
                app:drawableTopCompat="@drawable/ic_profile_menu" />
        </LinearLayout>

        <!-- Floating Add Order Button should be LAST so it shows on top -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tabCreateOrder"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_add"
            android:backgroundTint="@android:color/white"
            android:tint="@color/btn_orange"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
