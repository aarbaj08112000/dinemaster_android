<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_bg"
    tools:context=".OtpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvOtpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="130dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvOtpSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent you a One Time Password"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvOtpTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" />

        <!-- OTP Image -->
        <ImageView
            android:id="@+id/ivOtpImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/otp"
            android:contentDescription="OTP Illustration"
            app:layout_constraintTop_toBottomOf="@id/tvOtpSubtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp" />

        <!-- OTP Input -->
        <EditText
            android:id="@+id/etOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:padding="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/ivOtpImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp" />

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerifyOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:backgroundTint="@color/btn_orange"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etOtp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
